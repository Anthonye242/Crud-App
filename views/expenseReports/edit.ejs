<!-- views/expenseReports/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Expense Report</title>
</head>
<body>
  <% include partials/nav %>
  <h1>Edit Expense Report</h1>
  <form action="/expense-reports/<%= expenseReport._id %>?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= expenseReport.title %>" required><br><br>
    <label for="startDate">Start Date:</label>
    <input type="date" id="startDate" name="startDate" value="<%= expenseReport.startDate.toISOString().split('T')[0] %>" required><br><br>
    <label for="endDate">End Date:</label>
    <input type="date" id="endDate" name="endDate" value="<%= expenseReport.endDate.toISOString().split('T')[0] %>" required><br><br>
    <button type="submit">Update Expense Report</button>
  </form>
</body>
</html>
