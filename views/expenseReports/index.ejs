<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Expense Reports - Personal Finance Tracker</title>
</head>
<body>
  <%- include('../partials/nav') %>
  
  <h1>Expense Reports</h1>

  <a href="/expense-reports/new">Create New Expense Report</a>

  <ul>
    <% expenseReports.forEach(report => { %>
      <li>
        <%= report.title %> (<%= report.startDate.toDateString() %> - <%= report.endDate.toDateString() %>)
        <a href="/expense-reports/<%= report._id %>/edit">Edit</a>
        <form action="/expense-reports/<%= report._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
