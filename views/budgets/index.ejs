<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Budgets</title>
</head>
<body>
  <% include('../partials/nav.ejs') %>
  <h1>Budgets</h1>
  <a href="/budgets/new">Create New Budget</a>
  <ul>
    <% budgets.forEach(budget => { %>
      <li>
        <%= budget.title %> - $<%= budget.amount %>
        <a href="/budgets/<%= budget._id %>/edit">Edit</a>
        <form action="/budgets/<%= budget._id %>?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
